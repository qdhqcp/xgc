/*标签容器样式*/

.container-tags {
  margin-top: 20rpx;
  margin-left: 26rpx;
  margin-right: 26rpx;
}

/*标签的文字样式*/

.text-tags-style {
  font-size: 30rpx;
}

/*点赞容器样式*/

.container-like {
  height: 140rpx;
  width: 140rpx;
  margin: 0 auto;
  background: #eee;
  border-radius: 50%;
  overflow: hidden;
  text-align: center;
  margin-top: 22rpx;
}

/*点赞图片样式*/

.img-like {
  margin-top: 18rpx;
  height: 74rpx;
  width: 50rpx;
  vertical-align: top;
}

/*点赞个数样式*/

.view-like-count {
  margin-top: 5rpx;
  color: #848484;
  font-size: 26rpx;
}

/*评论个数，分割线，评论整体容器样式*/

.container-comments-count {
}

/*分隔线*/

.fengexian {
  margin-top: 40rpx;
  height: 16rpx;
  background: #f5f5f5;
}

/*评论数容器*/

.container-plcounts {
  font-size: 25rpx;
  color: #848484;
  padding: 26rpx;
}

/*评论分隔线*/

.plfengexian {
  height: 1rpx;
  background: #ededed;
}

/*评论item容器*/

.container-pl {
  position: relative;
}

/*评论头像*/

.pl-head {
  float: left;
  height: 64rpx;
  width: 64rpx;
  border-radius: 50%;
  margin-left: 26rpx;
  margin-top: 24rpx;
}

/*昵称，评论内容容器*/

.container-pl-nickname-content {
  float: left;
  margin-top: 26rpx;
  margin-left: 16rpx;
  width: calc(100vw - 200rpx);
}

/*昵称*/

.nickname {
  display: block;
  font-size: 24rpx;
  color: #727273;
}

/*评论内容*/

.plcontent {
  margin-top: 6rpx;
  font-size: 26rpx;
  display: block;
  color: #323232;
}

/*评论点赞容器*/

.container-pldianzan {
  position: absolute;
  right: 0;
  top: 0;
  padding-right: 26rpx;
  padding-top: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/*评论点赞文字*/

.text-plzan {
  color: #848484;
  font-size: 24rpx;
  margin-right: 10rpx;
}

/*评论点赞图片*/

.img-plzan {
  height: 40rpx;
  width: 26rpx;
}

/*底部分割线*/

.bottom-fengexian {
  margin-top: 26rpx;
  height: 1rpx;
  background: #ededed;
  float: left;
  width: calc(100vw - 122rpx);
  margin-left: 96rpx;
  margin-right: 26rpx;
}

/*底部评论输入框容器*/

.container-pl-input {
  background: rgb(69, 201, 29);
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  overflow: visible;
}

/*输入框容器样式*/

.pl-input {
  height: 88rpx;
  background: #727273;
  float: left;
  width: 540rpx;
}

/*输入框样式*/

.input {
  height: 88rpx;
}

/*收藏的样式*/

.img-shoucang {
  height: 64rpx;
  width: 64rpx;
  float: right;
  margin-top: 12rpx;
  margin-right: 14rpx;
  margin-left: 14rpx;
}

/*分享图片样式*/

.img-share {
  height: 88rpx;
  width: 118rpx;
  float: right;
  margin-top: -8rpx;
}

/*表情容器*/

.container-enmoji {
  margin-top: 88rpx;
  height: 200rpx;
  width: 100%;
  background: red;
}

/*swiper的样式*/

.swiper-box {
  height: 200rpx;
}

/*swiper-item容器的样式*/
.container-swiper-item{
  width: 100%;
  height: 200rpx;
}

.jref{
  width: 48rpx;
  height: 48rpx;
}
