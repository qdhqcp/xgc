/* pages/picdetail/picdetail.wxss */

@import "../template/artdetailtemplate.wxss";

/*scrollview样式*/

.container-scroll {
  width: 100%;
  height:100%;
}

/*标题容器样式*/

.container-title {
  margin-left: 26rpx;
  margin-right: 26rpx;
  margin-top: 15rpx;
}

/*title样式*/

.text-title {
  font-size: 32rpx;
  color: #343434;
}

/*图片容器样式*/

.container-pic {
  margin-top: 15rpx;
  margin-left: 26rpx;
  margin-right: 26rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  background-color: #000;
  position: relative;
}

/*图片样式1,宽度撑满屏幕*/

.pic-gif-style1 {
  width: 100%;
  display: block;
}

/*图片样式2，高度撑满*/

.pic-gif-style2 {
  width: 60%;
  display: block;
  margin: 0 auto;
}

/*gif播放按钮样式*/

.play-gif-style {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
}